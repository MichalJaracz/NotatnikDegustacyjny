<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/card_background"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- Ikona napoju -->
    <ImageView
        android:id="@+id/drink_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginEnd="12dp"
        android:contentDescription="Ikona napoju" />

    <!-- Opis napoju -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/drink_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa napoju"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/drink_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krótki opis napoju..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/drink_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocena: 5/5"
            android:textSize="14sp"
            android:textColor="#f07d11"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>
