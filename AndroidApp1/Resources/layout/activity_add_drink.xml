<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Nagłówek dodawania napoju -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj Nowy Napój"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#f07d11"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Pole nazwy napoju -->
    <EditText
        android:id="@+id/drink_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:hint="Nazwa napoju"
        android:padding="12dp"
        android:inputType="text"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:layout_marginBottom="16dp" />

    <!-- Pole opisu napoju -->
    <EditText
        android:id="@+id/drink_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/edit_text_background"
        android:hint="Opis napoju"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:layout_marginBottom="16dp" />

    <!-- Ocena napoju (SeekBar) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocena"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/rating_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="5"
        android:layout_marginBottom="16dp" />

    <!-- Przycisk Zapisz -->
    <Button
        android:id="@+id/save_drink_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#f07d11"
        android:text="Zapisz"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="24dp" />
</LinearLayout>
